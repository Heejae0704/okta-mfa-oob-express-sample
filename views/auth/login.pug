extends auth-layout

block contents
  form(action="/auth/login" method="post")
    div
      label.block(for="email") Email
      input.outline-none.border-2.rounded-md.px-4.py-2.mb-2.w-80(type="email" name="email" id="email" required)
    div
      label.block(for="password") Password 
      input.outline-none.border-2.rounded-md.px-4.py-2.mb-2.w-80(type="password" name="password" id="password" required)
    div 
      input.py-2.px-2.flex.justify-center.mt-2.w-full.bg-indigo-700.text-white.rounded-md(class="hover:bg-indigo-300 hover:text-gray-800 cursor-pointer" type="submit" value="Login")
      